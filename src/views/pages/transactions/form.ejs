<div class="max-w-3xl mx-auto">
  <input
    type="hidden"
    id="original-transaction-type"
    value="<%= transaction?.type || '' %>"
  >

  <h1 class="text-2xl font-semibold mb-6">
    <%= 
      mode === 'insert'
        ? 'Insertar Transacción'
        : mode === 'update'
        ? 'Editar Transacción'
        : mode === 'delete'
        ? 'Eliminar Transacción'
        : mode
    %>
  </h1>

  <form method="post" action="/transactions">

    <% if (errors?.general) { %>
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
        <%= errors.general %>
      </div>
    <% } %>

    <!-- ID -->
    <input type="hidden" name="id" value="<%= transaction?.id || '' %>">
    <input type="hidden" name="action" value="save">
    <input type="hidden" name="return_from" value="<%= context?.from || '' %>">
    <input type="hidden" name="return_category_id" value="<%= context?.category_id || '' %>">

    <!-- BLINDAJE DEL TIPO -->
     <% if (mode !== 'insert') { %>
    <input
      type="hidden"
      name="type"
      value="<%= transaction?.type || '' %>"
    >
    <% } %>

    <!-- Tipo -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Tipo</label>
      <div class="flex gap-6">
        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="income"
            <%= transaction?.type !== 'expense' && transaction?.type !== 'transfer' ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Ingreso
        </label>

        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="expense"
            <%= transaction?.type === 'expense' ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Egreso
        </label>

        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="transfer"
            <%= transaction?.type === 'transfer' ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Transferencia
        </label>
      </div>
    </div>

    <!-- Cuenta origen -->
    <div class="mb-4" data-field="account" data-autocomplete>
      <label class="block font-medium mb-1">Cuenta</label>

      <div class="relative">
        <input
          type="text"
          class="w-full border rounded px-3 py-2 pr-24 bg-white cursor-text"
          placeholder="Buscar cuenta…"
          data-autocomplete-input
          autocomplete="off"
          value="<%= transaction?.account_name || '' %>"
          <%= mode === 'delete' ? 'readonly' : '' %>
        >

        <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
          <span
            class="autocomplete-balance"
            data-autocomplete-display-balance
          ></span>
        </div>
      </div>

      <input
        type="hidden"
        name="account_id"
        data-autocomplete-hidden
        value="<%= transaction?.account_id || '' %>"
      >

      <% if (mode !== 'delete') { %>
      <div class="relative">
        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
        >
          <% accounts.forEach(a => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= a.id %>"
              data-label="<%= a.name %>"
              data-balance="<%= Number(a.balance).toFixed(2) %>"
            >
              <div class="flex items-center gap-2 min-w-0 w-full">
                <span class="flex-1 truncate autocomplete-label">
                  <%= a.name %>
                </span>

                <span
                  class="autocomplete-balance text-right whitespace-nowrap
                  <%= Number(a.balance) > 0 ? 'amount-positive' : 'amount-negative' %>"
                >
                  <%= Number(a.balance).toFixed(2) %>
                </span>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if (errors?.account) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.account %></p>
      <% } %>
    </div>

    <!-- Cuenta destino -->
    <div class="mb-4 hidden" data-field="to_account" data-autocomplete>
      <label class="block font-medium mb-1">Cuenta destino</label>

      <div class="relative">
        <input
          type="text"
          class="w-full border rounded px-3 py-2 pr-24 bg-white cursor-text"
          placeholder="Buscar cuenta destino…"
          data-autocomplete-input
          autocomplete="off"
          value="<%= transaction?.to_account_name || '' %>"          
          <%= mode === 'delete' ? 'readonly' : '' %>
        >

        <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
          <span
            class="autocomplete-balance"
            data-autocomplete-display-balance
          ></span>
        </div>
      </div>

      <input
        type="hidden"
        name="to_account_id"
        data-autocomplete-hidden
        value="<%= transaction?.to_account_id || '' %>"
      >

      <% if (mode !== 'delete') { %>
      <div class="relative">
        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
        >
          <% accounts.forEach(a => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= a.id %>"
              data-label="<%= a.name %>"
              data-balance="<%= Number(a.balance).toFixed(2) %>"
            >
              <div class="flex items-center gap-2 min-w-0 w-full">
                <span class="flex-1 truncate autocomplete-label">
                  <%= a.name %>
                </span>

                <span
                  class="autocomplete-balance text-right whitespace-nowrap
                  <%= Number(a.balance) > 0 ? 'amount-positive' : 'amount-negative' %>"
                >
                  <%= Number(a.balance).toFixed(2) %>
                </span>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if (errors?.to_account) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.to_account %></p>
      <% } %>
    </div>

    <!-- Categoría -->
    <div class="mb-4" data-field="category" data-autocomplete>
      <label class="block font-medium mb-1">Categoría</label>

      <input
        type="text"
        class="w-full border rounded px-3 py-2"
        placeholder="Buscar categoría…"
        data-autocomplete-input
        autocomplete="off"
        value="<%= transaction?.category_name || '' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
      >

      <input
        type="hidden"
        name="category_id"
        data-autocomplete-hidden
        value="<%= transaction?.category_id || '' %>"
      >

      <% if (mode !== 'delete') { %>
      <div class="relative">
        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
          data-category-type="income"
        >
          <% (incomeCategories || []).forEach(c => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= c.id %>"
              data-label="<%= c.name %>"
            >
              <%= c.name %>
            </li>
          <% }) %>
        </ul>

        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
          data-category-type="expense"
        >
          <% (expenseCategories || []).forEach(c => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= c.id %>"
              data-label="<%= c.name %>"
            >
              <%= c.name %>
            </li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <% if (errors?.category) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.category %></p>
      <% } %>
    </div>

    <!-- Monto -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Monto</label>
      <input
        type="number"
        step="0.01"
        min="0.01"
        name="amount"
        class="w-full border rounded px-3 py-2"
        value="<%= transaction?.amount || '' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
        required
      >
      <% if (errors?.amount) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.amount %></p>
      <% } %>
    </div>

    <!-- Fecha -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Fecha</label>
      <input
        type="datetime-local"
        name="date"
        class="w-full border rounded px-3 py-2"
        value="<%= transaction?.date || '' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
        required
      >
      <input type="hidden" name="timezone" id="timezone">
    </div>

    <!-- Descripción -->
    <div class="mb-6">
      <label class="block font-medium mb-1">Descripción</label>
      <textarea
        name="description"
        rows="3"
        class="w-full border rounded px-3 py-2"
        <%= mode === 'delete' ? 'readonly' : '' %>
      ><%= transaction?.description || '' %></textarea>
    </div>

    <div class="flex justify-end gap-2">
      <a 
        href="<%=
          context?.from === 'categories' && context?.category_id
          ? `/transactions?category_id=${context.category_id}&from=categories`
          : '/transactions'
          %>"
       class="px-4 py-2 bg-gray-200 rounded"
      >
        Cancelar
      </a>

      <% if (mode === 'delete') { %>
        <button
          type="submit"
          class="px-4 py-2 bg-red-600 text-white rounded"
          onclick="this.form.action.value='delete'"
        >
          Eliminar
        </button>
      <% } else { %>
        <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded">
          Guardar
        </button>
      <% } %>
    </div>

  </form>
</div>

<script src="/js/forms/transactions-form.js"></script>
<script src="/js/helpers/autocomplete-helper.js"></script>
