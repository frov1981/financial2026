<script>
  window.USER_ID = "<%= USER_ID %>"
</script>

<h1 class="ui-title">Dashboard</h1>

<!-- ============================
     CAROUSEL CONTAINER CON CONTROLES
============================= -->
<div class="carousel-container">
  <button id="carousel-prev" class="carousel-nav carousel-nav-prev" onclick="scrollCarouselPrev()"
    title="Anterior"></button>

  <!-- ============================
       CARD: KPIs GLOBALES
  ============================= -->
  <div class="home-carousel">


    <!-- ============================
     CACHE BALANCE
    ============================= -->
    <div class="ui-card home-slide">

      <div class="ui-card-header kpis-cache-balance-header-nav">
        <button id="kpis-cache-balance-prev" class="kpis-cache-balance-year-btn"></button>
        <h2 id="kpis-cache-balance-year-label" class="kpis-cache-balance-year-label">
          KPIs Balances
        </h2>
        <button id="kpis-cache-balance-next" class="kpis-cache-balance-year-btn"></button>
      </div>

      <div id="kpis-cache-balance" class="ui-card-body">

        <div class="ui-kpi-grid cols-6">
          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Ingresos</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-incomes">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Egresos</p>
            <p class="ui-kpi-value ui-kpi-red" id="kpis-cache-balance-expenses">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Prestamos</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-loans">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Pagos</p>
            <p class="ui-kpi-value ui-kpi-red" id="kpis-cache-balance-payments">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Ahorros</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-savings">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Retiros</p>
            <p class="ui-kpi-value ui-kpi-red" id="kpis-cache-balance-withdrawals">–</p>
          </div>
        </div>

        <div class="ui-kpi-grid cols-6">
          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Total Ingresos</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-total-inflows">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Total Egresos</p>
            <p class="ui-kpi-value ui-kpi-red" id="kpis-cache-balance-total-outflows">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Neto</p>
            <p class="ui-kpi-value ui-kpi-blue" id="kpis-cache-balance-net-cash-flow">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Ahorrado</p>
            <p class="ui-kpi-value ui-kpi-blue" id="kpis-cache-balance-net-savings">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Disponible</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-available-balance">–</p>
          </div>
        </div>

        <div class="ui-kpi-grid cols-6">
          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Desglose Capital</p>
            <p class="ui-kpi-value ui-kpi-green" id="kpis-cache-balance-principal-breakdown">–</p>
          </div>

          <div class="ui-kpi-item">
            <p class="ui-kpi-label">Desglose Interes</p>
            <p class="ui-kpi-value ui-kpi-red" id="kpis-cache-balance-interest-breakdown">–</p>
          </div>
        </div>
      </div>
    </div>

    <!-- ============================
     CARD: GRÁFICO 6 MESES
    ============================= -->
    <div class="ui-card home-slide">

      <div class="ui-card-header">
        <h2 class="ui-card-title">
          Tendencia de Ingresos y Egresos
          <span class="subtitle">Últimos 6 meses</span>
        </h2>
      </div>

      <div id="chart-data-last-6months-balance" class="ui-card-body">
        <div class="relative" style="height: 280px;">
          <canvas id="varChartDataLast6MonthsBalance"></canvas>
        </div>
      </div>

    </div>

    <!-- ============================
     CARD: GRÁFICO 6 AÑOS
============================= -->
    <div class="ui-card home-slide">

      <div class="ui-card-header">
        <h2 class="ui-card-title">
          Tendencia de Ingresos y Egresos
          <span class="subtitle">Últimos 6 años</span>
        </h2>
      </div>

      <div id="chart-data-last-6years-balance" class="ui-card-body">
        <div class="relative" style="height: 280px;">
          <canvas id="varChartDataLast6YearsBalance"></canvas>
        </div>
      </div>

    </div>

    <!-- ============================
     CARD: GRÁFICO 6 AÑOS DE PRÉSTAMOS
============================= -->
    <div class="ui-card home-slide">
      <div class="ui-card-header">
        <h2 class="ui-card-title">
          Tendencia de Préstamos
          <span class="subtitle">Últimos 6 años</span>
        </h2>
      </div>
      <div id="chart-data-last-6years-loan" class="ui-card-body">
        <div class="relative" style="height: 280px;">
          <canvas id="loansAnnualChart"></canvas>
        </div>
      </div>
    </div>

  </div>

  <button id="carousel-next" class="carousel-nav carousel-nav-next" onclick="scrollCarouselNext()"
    title="Siguiente"></button>

</div>

