<div class="max-w-xl mx-auto">
  <h1 class="text-2xl font-semibold mb-6">
    <%= mode === 'insert' 
    ? 'Nueva Cuenta' 
    : mode === 'update' 
    ? 'Editar Cuenta' 
    : 'Editar Estado Cuenta' %>
  </h1>

  <form method="post" action="/accounts/">
    <% if (errors?._form) { %>
    <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
      <%= errors._form %>
    </div>
    <% } %>

    <!-- ID -->
    <input type="hidden" name="id" value="<%= account?.id || '' %>">

    <!-- Tipo de cuenta -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Tipo</label>

      <div class="flex gap-6">
        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="cash"
            <%= account?.type === 'cash' || !account ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Efectivo
        </label>

        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="bank"
            <%= account?.type === 'bank' ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Banco
        </label>

        <label class="flex items-center gap-1">
          <input
            type="radio"
            name="type"
            value="card"
            <%= account?.type === 'card' ? 'checked' : '' %>
            <%= mode !== 'insert' ? 'disabled' : '' %>
          >
          Tarjeta
        </label>
      </div>

      <% if (errors?.type) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.type %></p>
      <% } %>
    </div>

    <!-- Nombre -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Nombre</label>
      <input
        type="text"
        name="name"
        class="w-full border rounded px-3 py-2"
        value="<%= account?.name || '' %>"
        <%= mode === 'status' ? 'readonly' : '' %>
        required
      >

      <% if (errors?.name) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.name %></p>
      <% } %>
    </div>

    <!-- Estado (solo activar / inactivar) -->
    <% if (mode === 'status') { %>
      <div class="mb-6">
        <label class="block font-medium mb-1">Estado</label>

        <select name="is_active" class="w-full border rounded px-3 py-2">
          <option value="true"  <%= account?.is_active ? 'selected' : '' %>>
            Activa
          </option>
          <option value="false" <%= !account?.is_active ? 'selected' : '' %>>
            Inactiva
          </option>
        </select>

        <% if (errors?.is_active) { %>
          <p class="text-red-600 text-sm mt-1"><%= errors.is_active %></p>
        <% } %>
      </div>
    <% } %>

    <!-- Acciones -->
    <div class="flex justify-end gap-2">
      <a href="/accounts" class="px-4 py-2 bg-gray-200 rounded">
        Cancelar
      </a>

      <button class="px-4 py-2 bg-blue-600 text-white rounded">
        Guardar
      </button>
    </div>

  </form>
</div>

<script src="/js/forms/account-form.js"></script>
