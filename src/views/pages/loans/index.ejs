<div class="max-w-6xl mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Préstamos</h1>

  <div class="mb-3 flex items-center gap-2 flex-nowrap">

    <button
      onclick="location.href='/loans/insert'"
      class="icon-btn bg-gray-200 hover:bg-gray-300"
      title="Nuevo Préstamo">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 4v16m8-8H4" />
      </svg>
      <span class="btn-text">Nuevo</span>
    </button>

    <div class="relative flex-1 min-w-0">

      <button
        id="clear-search-btn"
        class="icon-btn absolute left-0 top-0 h-full text-gray-400 hover:text-red-500 hidden"
        title="Limpiar">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>

      <input
        id="search-input"
        type="text"
        placeholder="Buscar préstamo..."
        class="w-full border rounded-lg pl-10 pr-10 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />

      <button
        id="search-btn"
        class="icon-btn absolute right-0 top-0 h-full text-gray-600 hover:text-blue-600"
        title="Buscar">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M21 21l-4.35-4.35M10 18a8 8 0 100-16 8 8 0 000 16z" />
        </svg>
      </button>

    </div>
  </div>

  <div class="overflow-x-auto border rounded-lg shadow-md">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Nombre</th>
          <th class="px-4 py-2 text-right text-sm font-medium text-gray-700 whitespace-nowrap">Monto</th>
          <th class="px-4 py-2 text-right text-sm font-medium text-gray-700 whitespace-nowrap">Saldo</th>
          <th class="px-4 py-2 text-right text-sm font-medium text-gray-700 hidden sm:table-cell">Interés</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-700 hidden md:table-cell">Inicio</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Estado</th>
          <th class="px-4 py-2 text-left text-sm font-medium text-gray-700">Acciones</th>
        </tr>
      </thead>
      <tbody id="loans-table" class="bg-white divide-y divide-gray-200"></tbody>
    </table>
  </div>
</div>

<script src="/js/indexes/loans-index.js"></script>
