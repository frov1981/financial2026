<%
  const rules = loan_form_policy
  const isHidden = field => rules[field] === 'hidden'
  const isReadOnly = field => rules[field] === 'read'
  const isEditable = field => rules[field] === 'edit'
%>

<div class="max-w-xl mx-auto">
  <h1 class="text-2xl font-semibold mb-6">
    <%= 
      mode === 'insert' ? 'Insertar Préstamo' : 
      mode === 'update' ? 'Editar Préstamo' :
      mode === 'delete' ? 'Eliminar Préstamo' : 
      mode
    %>
  </h1>

  <form method="post" action="/loans/">

    <% if (errors?.general) { %>
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
        <%= errors.general %>
      </div>
    <% } %>

    <!-- ID y acción -->
    <input type="hidden" name="id" value="<%= loan?.id || '' %>">
    <input type="hidden" name="action" value="save">
    <input type="hidden" name="mode" value="<%= mode %>">
    <input type="hidden" name="status" value="<%= loan?.status || 'active' %>">

    <!-- Nombre -->
    <% if (!isHidden('name')) { %>
    <div class="mb-4">
      <label class="block font-medium mb-1">Nombre</label>
      <input
        type="text"
        name="name"
        class="w-full border rounded px-3 py-2"
        value="<%= loan?.name || '' %>"
        <%= isReadOnly('name') ? 'readonly' : '' %>
        required
      >

      <% if (errors?.name) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.name %></p>
      <% } %>
    </div>
    <% } %>

    <!-- Monto total -->
    <% if (!isHidden('total_amount')) { %>
    <div class="mb-4">
      <label class="block font-medium mb-1">Monto total</label>
      <input
        type="number"
        step="0.01"
        name="total_amount"
        class="w-full border rounded px-3 py-2"
        value="<%= loan?.total_amount || '' %>"
        <%= isReadOnly('total_amount') ? 'readonly' : '' %>
        required
      >

      <% if (errors?.total_amount) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.total_amount %></p>
      <% } %>
    </div>
    <% } %>

    <!-- Fecha inicio -->
    <% if (!isHidden('start_date')) { %>
    <div class="mb-4">
      <label class="block font-medium mb-1">Fecha inicio</label>
      <input
        type="datetime-local"
        name="start_date"
        class="w-full border rounded px-3 py-2"
        value="<%= loan?.start_date || '' %>"
        <%= isReadOnly('start_date') ? 'readonly' : '' %>
        required
      >

      <% if (errors?.start_date) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.start_date %></p>
      <% } %>
    </div>
    <% } %>

    <!-- Cuenta de desembolso -->
    <% if (!isHidden('disbursement_account_id')) { %>    
    <div 
      class="mb-4" 
      data-field="disbursement_account" 
      data-autocomplete>
      
      <label class="block font-medium mb-1">Cuenta de desembolso</label>

      <div class="relative">
        <input
          type="text"
          class="w-full border rounded px-3 py-2 pr-24 bg-white cursor-text"
          placeholder="Buscar cuenta…"
          data-autocomplete-input
          autocomplete="off"
          value="<%= loan?.disbursement_account?.name || '' %>"
          <%= isReadOnly('disbursement_account_id') ? 'readonly' : '' %>
        >

        <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
          <span
            class="autocomplete-balance"
            data-autocomplete-display-balance
          ></span>
        </div>
      </div>

      <input
        type="hidden"
        name="disbursement_account_id"
        data-autocomplete-hidden
        value="<%= loan?.disbursement_account?.id || '' %>"
      >

      <div class="relative">
        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
        >
          <% (disbursement_accounts || []).forEach(a => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= a.id %>"
              data-label="<%= a.name %>"
              data-balance="<%= Number(a.balance).toFixed(2) %>"
            >
              <div class="flex items-center gap-2 min-w-0 w-full">
                <span class="flex-1 truncate autocomplete-label">
                  <%= a.name %>
                </span>

                <span
                  class="autocomplete-balance text-right whitespace-nowrap
                  <%= Number(a.balance) > 0 ? 'amount-positive' : 'amount-negative' %>"
                >
                  <%= Number(a.balance).toFixed(2) %>
                </span>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>

      <% if (errors?.disbursement_account) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.disbursement_account %></p>
      <% } %>
    </div>
    <% } %>

    <!-- Grupo de Préstamo (Autocomplete) -->
    <% if (!isHidden('loan_group_id')) { %>   
    <div
      class="mb-4" 
      id="loan-group-container" 
      data-field="loan_group" 
      data-autocomplete>

      <label class="block font-medium mb-1">Grupo de Préstamo</label>

      <input
        type="text"
        class="w-full border rounded px-3 py-2"
        placeholder="Buscar grupo de préstamo…"
        data-autocomplete-input
        autocomplete="off"
        value="<%= loan?.loan_group?.name || '' %>"
        <%= isReadOnly('loan_group_id') ? 'readonly' : '' %>
      >

      <input
        type="hidden"
        name="loan_group_id"
        data-autocomplete-hidden
        value="<%= loan?.loan_group?.id || '' %>"
      >

      <div class="relative">
        <ul
          class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
          data-autocomplete-list
          data-active="1"
        >
          <% loan_groups.forEach(g => { %>
            <li
              class="px-3 py-2 cursor-pointer hover:bg-gray-100"
              data-autocomplete-item
              data-id="<%= g.id %>"
              data-label="<%= g.name %>"
            >
              <%= g.name %>
            </li>
          <% }) %>
        </ul>
      </div>

      <% if (errors?.loan_group_id) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.loan_group_id %></p>
      <% } %>
    </div>
    <% } %>

    <!-- Acciones -->
    <div class="flex justify-end gap-2">
      <a 
        href="/loans" 
        class="px-4 py-2 bg-gray-200 rounded">
        Cancelar
      </a>

      <% if (mode === 'delete') { %>
        <button
          class="px-4 py-2 bg-red-600 text-white rounded"
          onclick="this.form.action.value='delete'">
          Eliminar
        </button>
      <% } else { %>
        <button class="px-4 py-2 bg-blue-600 text-white rounded">
          Guardar
        </button>
      <% } %>
    </div>

  </form>
</div>

<script src="/js/forms/loan-form.js"></script>
