<div class="max-w-3xl mx-auto">

  <h1 class="text-2xl font-semibold mb-6">
    <%= 
      mode === 'insert'
        ? 'Insertar Pago'
        : mode === 'update'
        ? 'Editar Pago'
        : mode === 'delete'
        ? 'Eliminar Pago'
        : mode
    %>
  </h1>

  <form method="post" action="/payments">
 
    <% if (errors?.general) { %>
      <div class="mb-4 p-3 bg-red-100 text-red-700 rounded">
        <%= errors.general %>
      </div>
    <% } %>

    <!-- IDs -->
    <input type="hidden" name="id" value="<%= payment?.id || '' %>">
    <input type="hidden" name="loan_id" value="<%= loan_id || LOAN_ID || '' %>">
    <input type="hidden" name="action" value="save">

    <!-- Cuenta -->
    <div class="mb-4" data-field="account" data-autocomplete>
    <label class="block font-medium mb-1">Cuenta</label>

    <div class="relative">
        <input
        type="text"
        class="w-full border rounded px-3 py-2 pr-24 bg-white cursor-text"
        placeholder="Buscar cuenta…"
        data-autocomplete-input
        autocomplete="off"
        value="<%= payment?.account_name || '' %>"
        <%= mode !== 'insert' ? 'readonly' : '' %>
        >

        <div class="absolute inset-y-0 right-3 flex items-center pointer-events-none">
        <span
            class="autocomplete-balance"
            data-autocomplete-display-balance
        ></span>
        </div>
    </div>

    <input
        type="hidden"
        name="account_id"
        data-autocomplete-hidden
        value="<%= payment?.account_id || '' %>"
    >

    <% if (mode === 'insert') { %>
    <div class="relative">
        <ul
        class="absolute z-10 w-full bg-white border rounded shadow max-h-48 overflow-y-auto hidden"
        data-autocomplete-list
        >
        <% accounts.forEach(a => { %>
            <li
            class="px-3 py-2 cursor-pointer hover:bg-gray-100"
            data-autocomplete-item
            data-id="<%= a.id %>"
            data-label="<%= a.name %>"
            data-balance="<%= Number(a.balance).toFixed(2) %>"
            >
            <div class="flex items-center gap-2 min-w-0 w-full">
                <span class="flex-1 truncate autocomplete-label">
                <%= a.name %>
                </span>

                <span
                class="autocomplete-balance text-right whitespace-nowrap
                <%= Number(a.balance) > 0 ? 'amount-positive' : 'amount-negative' %>"
                >
                <%= Number(a.balance).toFixed(2) %>
                </span>
            </div>
            </li>
        <% }) %>
        </ul>
    </div>
    <% } %>

    <% if (errors?.account) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.account %></p>
    <% } %>
    </div>

    <!-- Capital -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Monto Capital</label>
      <input
        type="number"
        step="0.01"
        min="0"
        name="principal_amount"
        class="w-full border rounded px-3 py-2"
        value="<%= payment?.principal_amount || '0.00' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
        required
      >
      <% if (errors?.principal_amount) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.principal_amount %></p>
      <% } %>
    </div>

    <!-- Interés -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Interés</label>
      <input
        type="number"
        step="0.01"
        min="0"
        name="interest_amount"
        class="w-full border rounded px-3 py-2"
        value="<%= payment?.interest_amount || '0.00' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
      >
      <% if (errors?.interest_amount) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.interest_amount %></p>
      <% } %>
    </div>

    <!-- Fecha -->
    <div class="mb-4">
      <label class="block font-medium mb-1">Fecha de Pago</label>
      <input
        type="datetime-local"
        name="payment_date"
        class="w-full border rounded px-3 py-2"
        value="<%= payment?.payment_date || '' %>"
        <%= mode === 'delete' ? 'readonly' : '' %>
        required
      >
      <% if (errors?.payment_date) { %>
        <p class="text-red-600 text-sm mt-1"><%= errors.payment_date %></p>
      <% } %>
    </div>

    <!-- Nota -->
    <div class="mb-6">
      <label class="block font-medium mb-1">Nota</label>
      <textarea
        name="note"
        rows="3"
        class="w-full border rounded px-3 py-2"
        <%= mode === 'delete' ? 'readonly' : '' %>
      ><%= payment?.note || '' %></textarea>
    </div>

    <!-- Acciones -->
    <div class="flex justify-end gap-2">
      <a
        href="/payments/<%= loan_id || LOAN_ID %>"
        class="px-4 py-2 bg-gray-200 rounded"
      >
        Cancelar
      </a>

      <% if (mode === 'delete') { %>
        <button
          type="submit"
          class="px-4 py-2 bg-red-600 text-white rounded"
          onclick="this.form.action.value='delete'"
        >
          Eliminar
        </button>
      <% } else { %>
        <button
          type="submit"
          class="px-4 py-2 bg-blue-600 text-white rounded"
        >
          Guardar
        </button>
      <% } %>
    </div>

  </form>
</div>

<script src="/js/forms/payment-form.js"></script>
<script src="/js/helpers/autocomplete-helper.js"></script>
