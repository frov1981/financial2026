{
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "debug": "nodemon --exec node --inspect-brk -r ts-node/register src/server.ts",
    "seed": "ts-node src/seeds/seed.ts",

    "copy:views": "node -e \"require('fs').cpSync('src/views','dist/views',{recursive:true})\"",
    "copy:public": "node -e \"require('fs').cpSync('src/public','dist/public',{recursive:true})\"",
    "build": "npm run build:ts && npm run copy:views && npm run copy:public",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "mysql2": "^3.16.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2"
  }
}
